# Database Configuration (Vercel Postgres)
DATABASE_URL="postgresql://default:CHANGE_ME@your-db-host.vercel-storage.com:5432/verceldb?sslmode=require"
POSTGRES_PRISMA_URL="postgresql://default:CHANGE_ME@your-db-host.vercel-storage.com:5432/verceldb?sslmode=require&pgbouncer=true&connect_timeout=15"
POSTGRES_URL_NON_POOLING="postgresql://default:CHANGE_ME@your-db-host.vercel-storage.com:5432/verceldb?sslmode=require"

# Authentication (NextAuth)
NEXTAUTH_URL="https://your-app.vercel.app"
NEXTAUTH_SECRET="your-super-secure-secret-here-64-chars-minimum-for-production-use"

# File Storage (Vercel Blob)
BLOB_READ_WRITE_TOKEN="vercel_blob_rw_your-token-here"
STORAGE_TYPE="vercel-blob"

# File Upload Configuration
MAX_FILE_SIZE=524288000  # 500MB
MAX_CHUNK_SIZE=5242880   # 5MB
MIN_CHUNK_SIZE=1048576   # 1MB

# API Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes

# Application Configuration
APP_NAME="AbacusHub"
APP_URL="https://your-app.vercel.app"
SUPPORT_EMAIL="support@abacushub.com"

# Monitoring & Analytics
VERCEL_ANALYTICS_ID=""
SENTRY_DSN=""

# Feature Flags
ENABLE_FILE_PREVIEW=true
ENABLE_REAL_TIME_UPDATES=true
ENABLE_ACTIVITY_LOGGING=true

# Security
CORS_ORIGIN="https://your-app.vercel.app"
CSRF_SECRET="your-csrf-secret-here"

# Performance
CACHE_MAX_AGE=3600
STATIC_MAX_AGE=31536000

# Redis (for sessions - optional)
REDIS_URL=""

# Email Configuration (optional)
SMTP_HOST=""
SMTP_PORT=587
SMTP_USER=""
SMTP_PASS=""
SMTP_FROM="noreply@abacushub.com"

# OAuth Providers (optional)
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""
GITHUB_CLIENT_ID=""
GITHUB_CLIENT_SECRET=""