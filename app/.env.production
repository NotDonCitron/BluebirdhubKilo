# Production environment variables for GCP deployment
NODE_ENV=production
NEXTAUTH_URL=https://clineapi-460920.uc.r.appspot.com
# NEXTAUTH_SECRET should be set in Google Secret Manager or deployment environment
# NEXTAUTH_SECRET=<SECRET_FROM_ENVIRONMENT>

# Database (use Cloud SQL in production)
DATABASE_URL=file:./prisma/prod.db

# Upload Configuration
MAX_FILE_SIZE=524288000
MAX_CHUNK_SIZE=5242880
MIN_CHUNK_SIZE=1048576

# Storage Configuration
STORAGE_TYPE=local

# Rate Limiting
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=60000

# Disable development features
E2E_TESTING=false
DISABLE_SSE_RATE_LIMITING=false