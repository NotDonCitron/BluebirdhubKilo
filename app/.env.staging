# Staging environment variables
NODE_ENV=staging
NEXTAUTH_URL=https://staging-abacushub.example.com
NEXTAUTH_SECRET=staging-secret-key-here

# Database (use staging Cloud SQL)
DATABASE_URL=postgresql://staging_user:password@/staging_db?host=/cloudsql/project:region:staging-instance

# Upload Configuration
MAX_FILE_SIZE=524288000
MAX_CHUNK_SIZE=5242880
MIN_CHUNK_SIZE=1048576

# Storage Configuration
STORAGE_TYPE=local

# Rate Limiting (relaxed for staging)
RATE_LIMIT_REQUESTS=5000
RATE_LIMIT_WINDOW=60000

# Debug features enabled in staging
E2E_TESTING=true
DISABLE_SSE_RATE_LIMITING=false